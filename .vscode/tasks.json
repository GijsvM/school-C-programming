{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build C project",
            "type": "shell",
            "command": "/usr/bin/gcc",
            "args": [
                "-g",
                "${workspaceFolder}/bikeComputer/main.c",
                "${workspaceFolder}/bikeComputer/bike_store.c",
                "${workspaceFolder}/bikeComputer/bike_math.c",
                "${workspaceFolder}/bikeComputer/bike_measure.c",
                "-o",
                "${workspaceFolder}/bikeComputer/main"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ],
            "detail": "Generated task to build C project."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}